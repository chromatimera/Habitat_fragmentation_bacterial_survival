isbn = {0927-7757},
issn = {09277757},
journal = {Colloids and Surfaces A: Physicochemical and Engineering Aspects},
keywords = {Bacteria encapsulation,Bacteria enumeration,Fluorosurfactant,Microdroplets,Single-cell characterisation,W/o emulsion},
%language = {en},
month = {may},
number = {1-3},
pages = {54--62},
title = {{Micro-confinement of bacteria into w/o emulsion droplets for rapid detection and enumeration}},
